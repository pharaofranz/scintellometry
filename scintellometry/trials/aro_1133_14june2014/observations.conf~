[arochime]
fnbase = 'arochime'

   [[setup]]

   samplerate = 400.*u.MHz
   fedge = 200.*u.MHz
   fedge_at_top = False
   blocksize = 2**23  # total file size = 512*32768*1000 = 1000 blocksize
# 15099595500 bytes / 3600 timestamps -> 4194304 -> 2**22 block size
# also the same as used by Ue-Li: ntint = 8192=2**13, nblock =512=2**9
# read ntint/2 nblock*2 bytes or 2**22
   [[2014-06-14T01:16:55.0]]
   src = B1133+16
   ppol =data/polycob1133+16_aro.dat
# """Polynomial([0.0, 0.8417256463041894])""" # Pulsar rotation frequency in Hz
