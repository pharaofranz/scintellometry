#!/bin/bash
psr=${1:-b1133+16}
#cp -p ../../ephemerides/psr$psr.par .
grep -n TZRFRQ psr$psr.par || \
cat <<EOD >>psr$psr.par
TZRFREQ 1400.
TZRMJD 56000.
TZRSITE coe
EOD
for site in 'ao' 'jb' 'eff' 'wsrt' 'vla'; do
  tempo2 -tempo1 -f psr$psr.par -polyco "57815 57817 300 12 12 $site 327.25"
  mv polyco_new.dat data/polyco${psr}_$site.dat
  rm polyco.tim newpolyco.dat
done
